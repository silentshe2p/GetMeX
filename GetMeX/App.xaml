<Application x:Class="GetMeX.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:GetMeX">
	<Application.Resources>
		<Style TargetType="TextBlock" x:Key="MainTitleStyle">
			<Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="FontFamily" Value="Bauhaus 93" />
			<Setter Property="FontSize" Value="20" />
			<Setter Property="Margin" Value="0,60,0,0" />
		</Style>
		<Style TargetType="ComboBox" x:Key="MainSelectionStyle">
			<Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="FontFamily" Value="DejaVu Sans Mono" />
			<Setter Property="FontSize" Value="12" />
			<Setter Property="Margin" Value="0,60,0,0" />
		</Style>
	</Application.Resources>
</Application>
