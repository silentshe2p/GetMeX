<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vms="clr-namespace:GetMeX.ViewModels.VMs;assembly=GetMeX.ViewModels" >

    <DataTemplate DataType="{x:Type vms:GoogleSearchViewModel}">
        <Grid>
            <StackPanel>
                <TextBox Width="500"
                    Text="{Binding Query}"
                     Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="25" FontFamily="Consolas" TextAlignment="Center"
                    Style="{DynamicResource MaterialDesignFloatingHintTextBox}"/>
                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                    SelectedItem="{Binding Language, Mode=TwoWay}"
					FontSize="12" FontStyle="Italic" FontFamily="Cambria"/>
            </StackPanel>

        </Grid>
    </DataTemplate>
</ResourceDictionary>